<h1>Add a new article</h1>


<div class="container mt-3">
  <%= form_with model: @article, class: "needs-validation", novalidate: true do |f| %>

    <div class="form-group">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control", placeholder: "Enter title" %>
    </div>

    <div class="form-group">
      <%= f.label :content, class: "form-label" %>
      <%= f.text_area :content, class: "form-control", placeholder: "Enter details", rows: 3 %>
    </div>

    <div class="boutons">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Back to list", articles_path, class: "btn btn-secondary mt-2" %>
    </div>
<% end %>
</div>
